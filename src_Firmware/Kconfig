menu "Wedka configurtion"
rsource "./MotorControllerFirmware/BrushedMotorControllerFirmware/Kconfig"

config TIME_BTWN_POS_CHECKS_MSEC
	int "Time in between checks if motors are at the desired position"
	default 1000

config AUTO_MEASUREMENTS
	bool "Perform automatic measurements and calulations in each point in matrix"
	default n

config MEASUREMENT_LENGTH
	int "number of points taken at each point in matrix"
	default 1
	depends on AUTO_MEASUREMENTS

endmenu